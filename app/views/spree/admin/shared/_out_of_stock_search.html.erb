<%= form_tag url: spree.out_of_stock_admin_reports_path  do  %>
  <div class="form-group date-range-filter">
    <%= label_tag nil, Spree.t(:date_range) %>
    <div class="date-range-filter row">
      <div class="col-md-6">
        <%= text_field_tag :created_at_gt, nil, class: 'datepicker datepicker-from form-control', value: datepicker_field_value(params[:created_at_gt]) %>
      </div>
      <div class="col-md-6">
        <%= text_field_tag :created_at_lt, nil, class: 'datepicker datepicker-to form-control', value: datepicker_field_value(params[:created_at_lt]) %>
    </div>
    </div>
  </div>

  <div class="form-actions">
    <%= button Spree.t(:search), 'search' %>
  </div>
<% end %>
